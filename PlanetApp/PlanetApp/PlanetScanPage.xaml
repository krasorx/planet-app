<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanetApp.PlanetScanPage"
             Title="PLANET"
             BackgroundImage="fondo.png">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="30,5,30,0">

            <Button Text="SCAN" FontSize="Large" TextColor="Black" 
                        BorderColor="AliceBlue" BorderWidth="1"
                        x:Name="ScanBtn" Clicked="ScanBtn_Clicked"
                        BackgroundColor="#733F7FBF" BorderRadius="50">

            </Button>

            <Button Text="LOAD" FontSize="Large" TextColor="Black" 
                    BorderColor="AliceBlue" BorderWidth="1"
                    x:Name="LoadBtn" Clicked="LoadBtn_Clicked"
                    BackgroundColor="#733F7FBF" BorderRadius="50">

            </Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>